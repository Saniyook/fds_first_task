.form-wrap
    +form({type: 'auth', label: "Registration"})
      .form__input-wrap
        +input({placeholder: 'Name'})
      .form__input-wrap
        +input({placeholder: 'Second name'})
      .form__radio-wrap
        +input({type: 'radio', name: 'sex', id: 'sexMale', value: 'Male', checked: true})
        +input({type: 'radio', name: 'sex', id: 'sexFemale', value: 'Female'})
        +input({type: 'radio', name: 'sex', id: 'sexUndefined', value: 'Other'})
      +form__field-label({value:'Birth Date'})
      .form__input-wrap
        +input({type: 'date'})
      +form__field-label({value:'Login Details'})
      .form__input-wrap
        +input({type: 'mail', placeholder: "Email"})
      .form__input-wrap  
        +input({type: 'password', placeholder: "Password"})
      .form__checkbox-wrap
        +input({type: 'checkbox', style:'toggle', value: 'Get special offers', name:'offers'})
      .form__btn-wrap_lg
        +btn({type: 'filed', style:'arrow', value:'Go to bill', size:'lg'})
      .form__accounting-wrap
        span.form__accounting Already registered?
        a(href = '/login')
          +btn({type: 'border', value: 'Log in', size:'md'})