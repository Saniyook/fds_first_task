mixin btn(params)
  if params != undefined && params != null
    - var {type = 'border', style='', value, size='md', enabled=true} = params
  - var cls = `btn btn_${type}`
  if size != undefined
    - cls += ` btn_${size}`
  if style != undefined
    - cls += `  btn_${style}`
  - enabled = enabled ? 'enabled' : 'disabled' 
  - cls += `  btn_${enabled}`
    button(class = cls)
      div #{value}
      if style =='arrow'
        i(class = 'fas fa-arrow-right')  