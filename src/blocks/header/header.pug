mixin header(params)
  if params != undefined && params != null
    - var {navLinks, user} = params
  if user != undefined && user != null
    - var {userName, userID} = user
  header.header
    .header__logo-wrap
      +logo 
    .header__nav-acc-wrap  
      +main-nav(navLinks)
      .header__accounting-wrap
        if userName != undefined
            p.header__user-name #{userName}
        else
          a(href = '/login.html')
            +btn({size:'nav-auth', type:'button', kind: 'border', value:'Login'})
          .header__accounting-wrap-btn 
            a(href = '/reg.html')
              +btn({size:'nav-auth', type:'button', kind:'filled', value:'Register'})