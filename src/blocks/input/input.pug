mixin input(params)
  if params != undefined || params != null
    - var {type = 'text', placeholder, checked = false, name='', id, value=''} = params
    if type == 'date' 
      - placeholder = placeholder || 'DD.MM.YYYY'
      - type = 'text'
    if type == 'password' 
      - placeholder = placeholder || 'Password'
    - var cls = `input input_${type}`  
    if type == 'text' || type == 'mail' || type == 'password'
      input(type = type, placeholder = placeholder, class=cls, id=id) 
    else if type == 'checkbox'
      label(class=`${cls}__label`)
        input(type=type, name=name, id = id, class=cls, checked = checked)
        .input_checkbox__border
        span(class = `${cls}__span`) #{value}
    else if type == 'radio'
      label(class=`${cls}__label`)
        input(type=type, name=name, id = id, class=cls, checked = checked)
        .input_radio__border
        span(class = `${cls}__span`) #{value}